<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PhotoFilter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
<!--        Primary band color-->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_variant</item>
        <item name="colorOnPrimary">@color/white</item>
<!--        Second band color-->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color_variant</item>
        <item name="colorOnSecondary">@color/black</item>
<!--        Status bar color-->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="Theme.PhotoFilter" parent="Base.Theme.PhotoFilter" />
</resources>